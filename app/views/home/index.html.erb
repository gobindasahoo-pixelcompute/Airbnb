<div class="w-full overflow-x-auto" style="scrollbar-width: none; -ms-overflow-style: none;">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <% 12.times do %> <!-- Loop through 12 items -->
      <div class="card bg-base-100 w-full shadow-sm">
        <figure class="px-10 pt-10">
          <img
            src="https://media.istockphoto.com/id/1319269543/photo/new-homes-on-a-quiet-street-in-raleigh-nc.jpg?s=612x612&w=0&k=20&c=qaRMP-xgYqFAXR9aTpiG0dtkyqPhJiTAovvxyG1AxvM=",
            alt="Shoes"
            class="rounded-xl" />
        </figure>
        <div class="card-body items-center text-center">
          <h2 class="card-title">Udaipur, India</h2>
          <p id="hosted-by" >Hosted by Gobinda</p>
          <p id="date-time">10 march 2025</p>
          <div class="price-rating flex gap-4">
            <p id="price">price <%="$5"%></p>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
            </svg>
          </div>
          <%# <div class="card-actions">
            <button class="btn btn-primary">Buy Now</button>
          </div> %>
        </div>
      </div>
    <% end %> <!-- Close the loop here -->
  </div>
</div>
